RewriteEngine On

# Kalau project kamu ada di http://localhost/sim-sekolah/
RewriteBase /sim-sekolah/

# Lewatkan file/folder yang memang ada (assets, uploads, dll)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Jangan rewrite folder system (opsional tapi aman)
RewriteRule ^system.* - [L]

# Semua request lain masuk ke CodeIgniter
RewriteRule ^ index.php [L]

Header always set X-XSS-Protection "1;mode=block"
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"